#include<bits/stdc++.h>
using namespace std;

int main(){
    int t,n=0;
    cin>>t;
    while(t--){
        int count = 0,count1 = 0;
        string s;
        cin>>s;
        for(int i=0;i<3;i++){
            if(s[i] == '+'){
                count++;
            }
            else if(s[i] == '-'){
                count1++;
            }
            
        }
        if(count == 2){
                n++;
            }
            else if(count1 == 2){
                n--;
            }
    }
    cout<<n;
}
