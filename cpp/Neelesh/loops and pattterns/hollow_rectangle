#include <iostream>
using namespace std;

int main()
{
    int a, b;
    cout << "Ente the no. of rows " << endl;
    cin >> a;
    cout << "Ente the no. of columns " << endl;
    cin >> b;
    for (int i = 0; i < a; i++)
    {
        for (int j = 0; j < b; j++)
        {
            if (i == 0 || j == 0 || j == (b-1) || i == (a-1))
            {
                cout<<"* ";
            }
            else{
                cout<<"  ";
            }
        }
        cout<<endl;
    }
    
     return 0;
}
